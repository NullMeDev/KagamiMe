# KagamiMe Test Environment Configuration
# Used by test-smoke.js and other test scripts
# DO NOT USE IN PRODUCTION

#==============================================================================
# Test Environment Indicator
#==============================================================================
NODE_ENV=test

#==============================================================================
# Discord Bot Configuration (Test Values)
#==============================================================================

# Dummy Discord credentials (not real tokens)
DISCORD_TOKEN=test_discord_token_12345
DISCORD_CLIENT_ID=123456789012345678
DISCORD_GUILD_ID=876543210987654321
DISCORD_CHANNEL_ID=111222333444555666
OWNER_ID=999888777666555444

#==============================================================================
# API Keys Configuration (Test Values)
#==============================================================================

# Dummy API keys (not real credentials)
GOOGLE_API_KEY=test_google_api_key_12345
CLAIMBUSTER_API_KEY=test_claimbuster_api_key_12345

#==============================================================================
# Database Configuration
#==============================================================================

# Test-specific database path (separate from production)
DATABASE_PATH=./data/test_kagamime.db

#==============================================================================
# RSS and News Configuration
#==============================================================================

# Test-specific settings
FETCH_INTERVAL_MINUTES=60
RSS_CHECK_INTERVAL=*/60 * * * *
DAILY_DIGEST_TIME=12:00
DIGEST_TIME=0 12 * * *

#==============================================================================
# Bot Configuration
#==============================================================================

# Test settings
BOT_NAME=KagamiMeTest
BOT_PREFIX=!test
VERSION=2.2.0-test

#==============================================================================
# Logging and Debugging
#==============================================================================

# Enable verbose logging for tests
LOG_LEVEL=debug
DEBUG=true

#==============================================================================
# Automatic Updates
#==============================================================================

# Disable automatic updates in test environment
AUTO_UPDATE_ENABLED=false
